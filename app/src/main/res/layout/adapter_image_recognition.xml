<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/img_recognition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:background="@mipmap/mast_2" />

    <TextView
        android:id="@+id/tv_recognition_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/img_recognition"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:text="鲫鱼"
        android:textColor="@color/black"
        android:textSize="@dimen/bottom_text_size_14" />

    <TextView
        android:id="@+id/tv_recognition_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:text="剩余80天" />

    <TextView
        android:id="@+id/tv_recognition_days"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@+id/tv_recognition_day"
        android:text="已存10天" />
</RelativeLayout>