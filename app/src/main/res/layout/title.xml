<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/title_head"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/top_title_bgcolor"
    android:orientation="horizontal"
    android:paddingBottom="10dp"
    android:paddingTop="10dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_left_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@mipmap/top_back"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tv_left_small_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/top_title_text_color"
            android:textSize="@dimen/top_text_small_size"
            android:visibility="gone" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="ZBX"
        android:textColor="@color/top_title_text_color"
        android:textSize="@dimen/top_text_big_size" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_right_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@mipmap/top_back"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tv_right_small_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/top_title_text_color"
            android:textSize="@dimen/top_text_small_size"
            android:visibility="gone" />
    </LinearLayout>

</RelativeLayout>